<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.erzse.calculadora.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/screen_layout">
        <TextView
            android:id="@+id/screen"
            android:layout_width="352dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shape"
            android:elevation="5dp"
            android:text="0"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:textSize="50sp"
            android:gravity="end"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/screen_layout">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:background="@color/colorButton"
                android:onClick="btodo"
                android:text="C"
                android:textColor="@color/colorAccent"
                android:textSize="35sp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:background="@color/colorButton"
                android:onClick="porcentaje"
                android:text="%"
                android:textColor="@color/colorAccent"
                android:textSize="35sp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:background="@color/colorButton"
                android:onClick="borrar1"
                android:text="←"
                android:textColor="@color/colorAccent"

                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:background="@color/colorButton"
                android:onClick="suma"
                android:text="+"
                android:textColor="@color/colorAccent"
                android:textSize="35sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:background="@color/colorButton"
                android:onClick="numero"
                android:text="1"
                android:textColor="@color/colorAccent"
                android:textSize="35sp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:background="@color/colorButton"
                android:onClick="numero"
                android:text="2"
                android:textColor="@color/colorAccent"
                android:textSize="35sp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:background="@color/colorButton"
                android:onClick="numero"
                android:text="3"
                android:textColor="@color/colorAccent"
                android:textSize="35sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:background="@color/colorButton"
                android:onClick="resta"
                android:text="-"
                android:textColor="@color/colorAccent"
                android:textSize="35sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:background="@color/colorButton"
                android:onClick="numero"
                android:text="4"
                android:textColor="@color/colorAccent"
                android:textSize="35sp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:background="@color/colorButton"
                android:onClick="numero"
                android:text="5"
                android:textColor="@color/colorAccent"
                android:textSize="35sp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:background="@color/colorButton"
                android:onClick="numero"
                android:text="6"
                android:textColor="@color/colorAccent"
                android:textSize="35sp" />

            <Button
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:background="@color/colorButton"
                android:onClick="division"
                android:text="/"
                android:textColor="@color/colorAccent"
                android:textSize="35sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:background="@color/colorButton"
                android:onClick="numero"
                android:text="7"
                android:textColor="@color/colorAccent"
                android:textSize="35sp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:background="@color/colorButton"
                android:onClick="numero"
                android:text="8"
                android:textColor="@color/colorAccent"
                android:textSize="35sp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:background="@color/colorButton"
                android:onClick="numero"
                android:text="9"
                android:textColor="@color/colorAccent"
                android:textSize="35sp" />

            <Button
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:background="@color/colorButton"
                android:onClick="multiplicacion"
                android:text="*"
                android:textColor="@color/colorAccent"
                android:textSize="35sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:background="@color/colorButton"
                android:onClick="punto"
                android:text="."
                android:textColor="@color/colorAccent"
                android:textSize="35sp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:background="@color/colorButton"
                android:onClick="numero"
                android:text="0"
                android:textColor="@color/colorAccent"
                android:textSize="35sp" />

            <Button
                android:id="@+id/button"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:background="@color/resultado"
                android:onClick="igual"
                android:text="="
                android:textColor="@color/colorAccent"
                android:textSize="35sp" />

        </LinearLayout>
        </LinearLayout>



</RelativeLayout>
